{
    "compilerOptions": {
        "target": "es2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "outDir": "./dist/"
    },
    "include": ["src/*.ts"],
    "watchOptions": {
        "excludeDirectories": ["**/node_modules"]
    }
}

